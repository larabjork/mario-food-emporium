paste back into product.show.html.erb

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.name, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No reviews are listed for this product.</p>
<% end %>




<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.author, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>Be the first to review this product.</p>
<% end %>


Review.destroy_all

250.times do |index|
  Review.create!(author: Faker::Movies::HitchhikersGuideToTheGalaxy.character, content_body: Faker::Movies::HitchhikersGuideToTheGalaxy.marvin_quote, rating: Faker::Number.between(from: 1, to: 5))
end

p "Created #{Review.count} reviews"
