<h1><%= @product.name %></h1>
<h3><%= @product.cost %></h3>
<h3><%= @product.country_of_origin %></h3>
<h4><%= @review.author %></h4>
<h4><%= @review.content_body %></h4>
<h4><%= @review.rating %></h4>





<p><%= link_to "Edit review", edit_product_review_path(@product) %></p>
<p><%= link_to "Delete review", product_review_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to product description", product_path(@product) %></p>
