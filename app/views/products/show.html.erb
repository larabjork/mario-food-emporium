<h1>Blend: <%= @product.name %></h1>
<h3>Price Per Pound: $<%= @product.cost %></h3>
<h3>Origin: <%= @product.country_of_origin %></h3>

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>
  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.author, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p><%= link_to "Be the first person to tell us what you think of this coffee!", new_product_review_path(@product) %></p>
<% end %>

<p><%= link_to "Tell us what you think of this coffee!", new_product_review_path(@product) %></p>

<p><%= link_to "Edit this coffee's info", edit_product_path(@product) %></p>
<p><%= link_to "Delete this coffee", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to products", products_path %></p>
