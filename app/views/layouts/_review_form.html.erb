<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label "You can call me:" %>
  <%= f.text_field :author %>
  <%= f.label "My thoughts:" %>
  <%= f.text_area :content_body %>
  <%= f.label "On a scale of 1 to 5, my rating is:" %>
  <%= f.text_field :rating %>
  <%= f.submit %>
<% end %>
